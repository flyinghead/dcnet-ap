#!/bin/sh
# postrm script for dcnet-ap
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

if [ -d /run/systemd/system ]; then
        systemctl --system daemon-reload >/dev/null || true
fi
if [ "$1" = "remove" ]; then
        if [ -x "/usr/bin/deb-systemd-helper" ]; then
                deb-systemd-helper mask 'ethtap.service' >/dev/null || true
                deb-systemd-helper mask 'discoping.service' >/dev/null || true
                deb-systemd-helper mask 'iptables-dcnet.service' >/dev/null || true
        fi
fi

if [ "$1" = "purge" ]; then
        if [ -x "/usr/bin/deb-systemd-helper" ]; then
                deb-systemd-helper purge 'ethtap.service' >/dev/null || true
                deb-systemd-helper unmask 'ethtap.service' >/dev/null || true
                deb-systemd-helper purge 'discoping.service' >/dev/null || true
                deb-systemd-helper unmask 'discoping.service' >/dev/null || true
                deb-systemd-helper purge 'pppd.socket' >/dev/null || true
                deb-systemd-helper purge 'psmash-pppd.socket' >/dev/null || true
                deb-systemd-helper purge 'iptables-dcnet.service' >/dev/null || true
                deb-systemd-helper unmask 'iptables-dcnet.service' >/dev/null || true
        fi
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
